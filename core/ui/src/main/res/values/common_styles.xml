<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- common styles -->
    <style name="commonWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="commonMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="commonMPWC">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- view styles -->
    <style name="commonWrapContent.textView">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="commonWrapContent.imageButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    <style name="commonTextViewDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="commonWrapContent.button">
        <item name="fontFamily">serif</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="commonMPWC.textField">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="fontFamily">serif</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">@color/primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="commonMPWC.toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/secondary</item>
    </style>
    <style name="commonMatchParent.navigationView">
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/secondary</item>
        <item name="subheaderColor">@color/primary</item>
        <item name="itemTextColor">@color/primary</item>
    </style>
    <!-- Layouts -->
    <style name="commonMatchParent.linearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/secondary</item>
    </style>
    <style name="commonMPWC.tabLayout">
        <item name="tabMode">auto</item>
        <item name="android:background">@color/primary</item>
        <item name="tabIndicatorColor">@color/secondary</item>
        <item name="tabTextColor">@color/secondary</item>
        <item name="tabSelectedTextColor">@color/secondary</item>
    </style>
</resources>